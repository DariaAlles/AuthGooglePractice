@using static AuthGoogle.Controllers.AdminController
@model LoginViewModel

<head>
    <script src="../lib/bootstrap/js/color-modes.js"></script>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="../lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
    <title>Login</title>
</head>

<body>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Admin" asp-action="Index"> Admin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Manager" asp-action="Index"> Manager </a>
                    </li>
                </ul>
                <div class="nav-item">
                    <a class="nav-link active" asp-controller="Admin" asp-action="LogOff" style="color: white;"> LogOff </a>
                </div>
            </div>
        </div>
    </nav>

<div class="container pt-5">
   <div class="row">
    <div class=" col-sm" >
    </div>
    <div class=" col-sm-6" >
    <div class="container pt-5">
    

    <form asp-controller="Admin" asp-action="Login" method="post">
    <input hidden asp-for="ReturnUrl" />

    <center>
    <h1> Login </h1>
    </center>
  <!-- Email input -->
  <div class="form-outline mb-4">
    <input asp-for="UserName" class="form-control"/>
    <span asp-validation-for="UserName"></span>
    <label> UserName </label>
  </div>

  <!-- Password input -->
  <div class="form-outline mb-4">
    <input asp-for="Password" class="form-control"/>
    <span asp-validation-for="Password"></span>
    <label> Password </label>
  </div>


  <!-- Submit button -->
     
     <button type="submit" class="btn w-100 btn-primary mb-4"> LOGIN </button>
     
    </form>

       <center>
       <p> Or Sign Up Using </p>
       </center>

       <center>
       <form asp-controller="Admin" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">

        @if (Model.ExternalProviders != null)
           {
            @foreach (var provider in Model.ExternalProviders)
            {
            <button type="submit"
              name="provider"
              value="@provider.Name">
              @provider.DisplayName
            </button>
            }

           }
        else
           {

           }
     </form>
     </center>
     </div>
     </div>
<div class=" col-sm" >
    </div>
   </div>
</div>

</body>